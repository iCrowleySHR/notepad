<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textSize="18sp"
            android:fontFamily="@font/raleway_bold"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o título"
            android:background="@drawable/bordered_edittext"
            android:inputType="text"
            android:fontFamily="@font/raleway_medium"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtCategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="18sp"
            android:fontFamily="@font/raleway_bold"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a categoria"
            android:inputType="text"
            android:fontFamily="@font/raleway_medium"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bordered_edittext"
            />

        <TextView
            android:id="@+id/txtContentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conteúdo"
            android:textSize="18sp"
            android:fontFamily="@font/raleway_bold"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <EditText
            android:id="@+id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Digite o conteúdo"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textMultiLine"
            android:lines="10"
            android:gravity="top"
            android:background="@drawable/bordered_edittext" />

    </LinearLayout>
</FrameLayout>
