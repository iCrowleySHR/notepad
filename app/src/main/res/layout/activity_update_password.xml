<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdatePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Rótulo para o campo de senha atual -->
        <TextView
            android:id="@+id/labelCurrentPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha Atual:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Sua senha atual"
            android:inputType="textPassword" />

        <!-- Espaçamento entre campos -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Rótulo para o campo de nova senha -->
        <TextView
            android:id="@+id/labelNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova Senha:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Sua nova senha"
            android:inputType="textPassword" />

        <!-- Espaçamento entre campos -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Rótulo para o campo de confirmação de nova senha -->
        <TextView
            android:id="@+id/labelNewPasswordConfirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmação da Nova Senha:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNewPasswordConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Sua nova senha para confirmação"
            android:inputType="textPassword" />

        <!-- Espaçamento entre campos -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btnSendUpdatePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send"
            app:backgroundTint="@color/blue"
            app:icon="@drawable/baseline_send_24"
            app:iconGravity="textStart" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
